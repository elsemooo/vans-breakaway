              <option value="amarillo">Amarillo</option>
              <option value="naranja">Naranja</option>
              <option value="ninguno">Ninguno</option>
            </select>
          </div>
        </div>
        <div class="flex flex-col">
          <label class="font-semibold text-2xl" for="texto">Texto:</label>
          <textarea
            id="texto"
            name="textoDiseño"
            class="bg-gray-200 shadow-sm mt-2 mb-7 px-5 py-2 rounded-lg outline-none w-fit h-[125px]"
            placeholder='Ingresa el texto que quieres ponerle a tu zapatilla. por ejemplo: "Erick"'
          ></textarea>
        </div>
        <input
          type="submit"
          id="submitbutton"
          value="¡Personalizar!"
          class="bg-[#241f21] py-4 rounded-xl w-full font-bold text-white text-xl text-center cursor-pointer"
        />
      </div>
      <script>
        document.addEventListener("astro:page-load", () => {
          const base = document.getElementById("vansbase");
          const submitButton = document.getElementById(
            "submitbutton"
