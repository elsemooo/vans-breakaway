              <option value="verde">Verde</option>
              <option value="celeste">Celeste</option>
              <option value="amarillo">Amarillo</option>
              <option value="naranja">Naranja</option>
              <option value="ninguno">Ninguno</option>
            </select>
          </div>
        </div>
        <div>
          <h2 class="font-semibold text-2xl">Color 2:</h2>
          <div>
            <select
              name="colors"
              id="color"
              class="bg-gray-200 shadow-sm mt-2 mb-7 px-5 rounded-lg outline-none w-fit h-[40px]"
            >
              <option value="" hidden>selecciona un color</option>
              <option value="negro">Negro</option>
              <option value="rojo">Rojo</option>
              <option value="blanco">Blanco</option>
              <option value="rosa">Rosa</option>
              <option value="verde">Verde</option>
              <option value="celeste">Celeste</option>
              <option value="amarillo">Amarillo</option>
              <option value="naranja">Naranja</option>
              <option value="ninguno">Ninguno</option>
            </select>
          </div>
        </div>
        <div>
          <h2 class="font-semibold text-2xl">Color 3:</h2>
          <div>
            <select
              name="colors"
              id="color"
              class="bg-gray-200 shadow-sm mt-2 mb-7 px-5 rounded-lg outline-none w-fit h-[40px]"
            >
              <option value="" hidden>selecciona un color</option>
              <option value="negro">Negro</option>
              <option value="rojo">Rojo</option>
              <option value="blanco">Blanco</option>
              <option value="rosa">Rosa</option>
              <option value="verde">Verde</option>
